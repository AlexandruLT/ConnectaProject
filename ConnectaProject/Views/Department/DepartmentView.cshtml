@model IEnumerable<ConnectaProject.Models.DepartementViewModel>

@{
    ViewBag.Title = "DepartmentView";
}

<div class="wrapper">
    <div class="container-fluid">
        <!-- Page-Title -->
        <div class="page-title-box">
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <h4 class="page-title">Company Departments</h4>
                </div>
            </div>
            <!-- end row -->
        </div>


        <!-- START ROW -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <h4 class="mt-0 header-title mb-4">
                            DEP LIST
                            <button type="button" class="btn btn-info waves-effect waves-light" data-url="@Url.Action("AddDepartment", "Department" )"> + ADD</button>
                        </h4>
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OfficeName)
                                </th>
                            </tr>

                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OfficeName)
                                    </td>
                                    <td>
                                        <div>
                                            <input type="button" class="btn btn-info waves-effect waves-light" value="Edit" data-url="@Url.Action("DepartmentDetails", "Department", new { Id = item.DepartmentKey })" />
                                            <input type="button" id="@item.DepartmentKey" class="btn btn-danger waves-effect waves-light" value="Delete" data-url="@Url.Action("DeleteDepartment", "Department")" />
                                        </div>
                                    </td>
                                </tr>
                                }
                            }

                        </table>
                        </div>
                        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>

                    </div>
                </div>
            </div>

            <!-- END ROW -->

        </div>
        <!-- end container-fluid -->
    </div>


        <div class="modal fade" id="myModal1" role="dialog">

            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title mt-0" id="myModalLabel">
                            DELETE
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>

                    <div class="modal-body">

                        <p>Are you sure you want to delete this record?</p>

                    </div>

                    <div class="modal-footer">

                        <button type="button" class="btn btn-danger pull-right" data-dismiss="modal">Cancel</button>

                        <button type="Submit" class="btn btn-success pull-right" id="confirmOk">Ok</button>

                    </div>

                </div>



            </div>

        </div>




        <script src="@Url.Content("~/Scripts/js/jquery.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/js/ModalControl.js")" type="text/javascript"></script>
