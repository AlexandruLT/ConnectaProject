@model IEnumerable<ConnectaProject.Models.RoleModel>

@{
    ViewBag.Title = "RoleView";
}

<div class="wrapper">
    <div class="container-fluid">
        <!-- Page-Title -->
        <div class="page-title-box">
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <h4 class="page-title">Company Departments</h4>
                </div>
            </div>
            <!-- end row -->
        </div>


        <!-- START ROW -->
        <div>
            <div class="row">
                <div class="col-xl-12">
                    <div class="card m-b-30">
                        <div class="card-body">
                            <h4 class="mt-0 header-title mb-4">
                                USER ROLES
                                <button type="button" class="btn btn-info waves-effect waves-light" value="AddRole"> + ADD</button>
                            </h4>

                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <th scope="col" colspan="2">Functionality</th>
                                </tr>

                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>

                                            <td id=@item.BusinessRolesKey class="label">
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>

                                            <td>
                                                <div>
                                                    @Html.CheckBoxFor(modelItem => item.EditUsers, new { id=@item.BusinessRolesKey, @class= "check-box EditUsers" })
                                                    <label>Edit users</label>
                                                </div>
                                                <div>
                                                    @Html.CheckBoxFor(modelItem => item.MakeSurvey, new { id = @item.BusinessRolesKey, @class = "check-box MakeSurvey" })
                                                    <label>Make Survey</label>
                                                </div>

                                                <div>
                                                    @Html.CheckBoxFor(modelItem => item.EditSurvey, new { id = @item.BusinessRolesKey, @class = "check-box EditSurvey" })
                                                    <label>Edit survey</label>
                                                </div>

                                                <div>
                                                    @Html.CheckBoxFor(modelItem => item.AssignSurvey, new { id = @item.BusinessRolesKey, @class = "check-box AssignSurvey" })
                                                    <label>Assign Survey</label>
                                                </div>
                                            </td>

                                            <td>
                                                <div>
                                                    <button type="button" id=@item.BusinessRolesKey value="RoleEdit" class="btn btn-primary waves-effect waves-light edit" data-toggle="modal" data-target="#myModal">Edit</button>
                                                    <button type="button" id=@item.BusinessRolesKey class="btn btn-danger waves-effect waves-light edit">Remove</button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </table>

                            <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title mt-0" id="myModalLabel">Edit</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">×</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Name: <input class="form-control" type="text" id="example-text-input"></p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary waves-effect" data-dismiss="modal">Close</button>
                                            <input type="submit" class="btn btn-primary waves-effect waves-light save" id="confirmok1" value="Save changes" />
                                        </div>
                                    </div><!-- /.modal-content -->
                                </div><!-- /.modal-dialog -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="myModal1" role="dialog">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="myModalLabel">
                    DELETE
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <div class="modal-body">
                <p>Are you sure you want to delete this record?</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger pull-right" data-dismiss="modal">Cancel</button>
                <button type="Submit" class="btn btn-success pull-right" id="confirmOk">Ok</button>
            </div>
        </div>
    </div>
</div>



<script src="@Url.Content("~/Scripts/js/jquery.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/RoleModal.js")" type="text/javascript"></script>